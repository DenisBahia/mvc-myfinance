@model  ContaModel

@{
    ViewData["Title"] = "CriarConta";
}

<h3>Criar Conta</h3>

<form asp-controller="Conta" asp-action="CriarConta">
    <div class="form-group">
        <label>Nome:</label>
        <input type="text" asp-for="Nome" class="form-control" />
        <span class="text-danger" asp-validation-for="Nome"></span>
    </div>
    <div class="form-group">
        <label>Saldo:</label>
        <input type="number" asp-for="Saldo" class="form-control" />
        <span class="text-danger" asp-validation-for="Saldo"></span>
    </div>
    <button type="submit" class="btn btn-block btn-success">Registrar</button>
</form>