@model UsuarioModel

@{ 
    if (@TempData["MensagemLoginInvalido"] != null)
    {
        <div class="alert alert-danger">
            <strong>Atenção!</strong> @TempData["MensagemLoginInvalido"]
        </div>
    }
}

<form asp-controller="Usuario" asp-action="ValidarLogin" method="post">
    <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" class="form-control" id="email" asp-for="Email">
    </div>
    <div class="form-group">
        <label for="pwd">Password:</label>
        <input type="password" class="form-control" id="pwd" asp-for="Senha">
    </div>
    <div class="checkbox">
        <label><input type="checkbox"> Lembrar minha senha</label>
    </div>
    <button type="submit" class="btn btn-default">Entrar</button>
</form>