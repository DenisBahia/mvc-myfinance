@model UsuarioModel

@{

    Layout = "../Shared/_LayoutLogin.cshtml";

}

<div class="container" style="background-color: rgba(239, 230, 230, .50); border-radius: 8px; padding: 20px; width: 400px;">
    @{
        if (@TempData["MensagemLoginInvalido"] != null)
        {
            <div class="alert alert-danger">
                <strong>Atenção!</strong> @TempData["MensagemLoginInvalido"]
            </div>
        }
    }
    <form asp-controller="Usuario" asp-action="ValidarLogin" method="post">
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" class="form-control" id="email" asp-for="Email">
        </div>
        <div class="form-group">
            <label for="pwd">Password:</label>
            <input type="password" class="form-control" id="pwd" asp-for="Senha">
        </div>
        <div class="checkbox">
            <label><input type="checkbox"> Lembrar minha senha</label>
        </div>
        <button type="submit" class="btn btn-primary">Entrar</button>
        <button type="button" class="btn btn-default" onclick="javascript:window.location.href='../Usuario/Criar'">Criar Conta</button>
    </form>
</div>